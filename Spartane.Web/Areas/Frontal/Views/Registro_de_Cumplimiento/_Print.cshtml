@model IList<Spartane.Web.Areas.Frontal.Models.Registro_de_CumplimientoGridModel>

@{
    var rowCounter = 0;
}

<style>
    .table {
        width: 100%;
        border: 1px solid #cccccc;
        font-family: "open sans","Helvetica Neue",Helvetica,Arial,sans-serif;
        /*border-collapse: separate !important;*/
        font-size: 13px;
    }

        .table td {
            padding: 2px;
            border:1px solid #cccccc;
        }

    .table tr:nth-of-type(2n+1) {
        background-color: #f9f9f9;
    }

        .table tr:nth-of-type(2n) {
            background-color: #8da0c2;
        }

    .table-row-1 td, .table-row-1 th {
    }

    .table-row-2 td, .table-row-2 th, thead {
    }

    .tableHeaderRow {
        font-weight: bold;
        border: 1px solid #ff6a00;
    }

    .column1 {
        width: 15%;
    }

    .column2 {
        width: 15%;
    }
</style>
<br />
<body onbeforeprint="ocultarcolumnas();">
 <span id="columnsVisible"></span>
<table class="table" cellspacing="0" cellpadding="0" border="0">
    <thead>
        <tr>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Clave
            </td>
                        <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Clave
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Mandamiento_Judicial
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Fecha_de_Registro
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Hora_de_Registro
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Usuario_de_Registro
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Resolucion
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Fecha_de_Resolucion
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Numero_de_Oficio
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Radiograma
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Partida_que_cumplimenta
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Area_que_envia_cumplimiento
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Estado
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Municipio
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Poblacion
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Colonia
            </td>
            <td class="column1">
                @Resources.Registro_de_CumplimientoResources.Observaciones_del_Cumplimiento
            </td>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {                
                <tr>
                    <td>
                        @item.Clave
                    </td>
					                    <td>
                        @item.Clave
                    </td>
                    <td>
                        @item.Mandamiento_Judicial
                    </td>
                    <td>
                        @item.Fecha_de_Registro
                    </td>
                    <td>
                        @item.Hora_de_Registro
                    </td>
                    <td>
                        @item.Usuario_de_Registro
                    </td>
                    <td>
                        @item.ResolucionDescripcion
                    </td>
                    <td>
                        @item.Fecha_de_Resolucion
                    </td>
                    <td>
                        @item.Numero_de_Oficio
                    </td>
                    <td>
                        @item.Radiograma
                    </td>
                    <td>
                        @item.Partida_que_cumplimentaDescripcion
                    </td>
                    <td>
                        @item.Area_que_envia_cumplimientoDescripcion
                    </td>
                    <td>
                        @item.Estado
                    </td>
                    <td>
                        @item.Municipio
                    </td>
                    <td>
                        @item.Poblacion
                    </td>
                    <td>
                        @item.Colonia
                    </td>
                    <td>
                        @item.Observaciones_del_Cumplimiento
                    </td>

                </tr>
                rowCounter++;
            }
        }
    </tbody>
</table>
</body>

<script>
    function ocultarcolumnas() {        
        var arr = document.getElementById('columnsVisible').text.split(',');
        for (var i = 0; i < arr.length; i++) {
            if (arr[i] == "false") {
                show_hide_column(i-1, false);
            }
        }    
    };

    function show_hide_column(col_no, do_show) {
        var rows = document.getElementsByClassName('table')[0].rows;
        for (var row = 0; row < rows.length; row++) {
            var cols = rows[row].cells;
            if (col_no >= 0 && col_no < cols.length) {
                console.log(col_no);
                cols[col_no].style.display = do_show ? '' : 'none';
            }
        }
    }
</script>

